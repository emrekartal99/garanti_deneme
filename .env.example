# Garanti BBVA API Configuration
# Copy this file to .env and fill in your actual values

# OAuth 2.0 Credentials (from Garanti BBVA Developer Portal)
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here

# API Environment Configuration
NODE_ENV=development
API_BASE_URL=https://apis.garantibbva.com.tr:443
TOKEN_ENDPOINT=/auth/oauth/v2/token
API_ENDPOINT=/balancesandmovements/accountinformation/transaction/v1/gettransactions

# OAuth Settings
OAUTH_GRANT_TYPE=client_credentials
OAUTH_SCOPE=oob

# Test Configuration
TEST_CONSENT_ID=3e09da8a-ae9c-50bc-b34a-c61531729dbe
TEST_UNIT_NUM=295
TEST_ACCOUNT_NUM=6291296
TEST_IBAN=TR620006200029500006291296

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=true

# API Rate Limiting
REQUEST_TIMEOUT=30000
RETRY_ATTEMPTS=3

# Development Settings
ENABLE_VERBOSE_LOGGING=true
SAVE_TEST_RESULTS=true